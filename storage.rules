rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own profile pictures
    // Profile pictures can be read by anyone (to display avatars),
    // but only the owner (same auth.uid) can upload / overwrite / delete
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload and manage their own quiz images
    match /quiz-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload and manage quiz images by quiz ID (for updates)
    match /quiz-images/{quizId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 