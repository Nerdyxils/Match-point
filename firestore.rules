rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Quizzes: public read access, authenticated users can create/update their own
    match /quizzes/{quizId} {
      allow read: if true; // Public read access for quiz takers
      allow create: if request.auth != null; // Authenticated users can create quizzes
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId; // Only quiz creator can update/delete
    }
    
    // Results: public write access (for quiz submissions), authenticated users can read their own
    match /results/{resultId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId; // Quiz creator can read results
      allow create: if true; // Public write access for quiz submissions
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId; // Only quiz creator can update/delete
    }
  }
} 